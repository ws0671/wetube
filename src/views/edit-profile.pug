extends base

block content
    if errorMessage 
        span.error-span=errorMessage 
    form(method="POST", enctype='multipart/form-data')
        label(for='avatar') Avatar
        input(type='file', id='avatar',name ='avatar' accept='image/*')
        input(placeholder='Nickname',name='name' , type='text',required,value=loggedInUser.name)
        input(placeholder='Email',name='email' , type='email',required,value=loggedInUser.email)
        input(placeholder='ID',name='username' , type='text',required,value=loggedInUser.username)
        input(type='submit',value='Update Profile')
        if !loggedInUser.socialOnly
            div.edit-profile__password
                a(href='change-password') Change Password &rarr;